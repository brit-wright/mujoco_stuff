<mujoco model="scene">

    <!-- import the unitree go2 -->
    <include file="go2.xml"/>

    <!-- create the environment which contains the obstacles -->
    <worldbody>

        <!-- let's start by defining the outer boundary -->
        <!-- let's assume the robot to be at the center of the room (15, 10)-->
        <geom name="top_boundary" type="box" size="15 0.05 0.05" pos="15 20.05 0.05" rgba="1 0 0 1"/>
        <geom name="lower_boundary" type="box" size="15 0.05 0.05" pos="15 -0.05 0.05" rgba="1 0 0 1"/>
        <geom name="left_boundary" type="box" size="0.05 10 0.05" pos="-0.05 10 0.05" rgba="1 0 0 1"/>
        <geom name="right_boundary" type="box" size="0.05 10 0.05" pos="30.05 10 0.05" rgba="1 0 0 1"/>

        <geom name="obstacle 1" type="box" size="7.5 0.05 0.05" pos="7.5 10 0.05" rgba="1 0 0 1"/>
        <geom name="obstacle 2" type="box" size="6 0.05 0.05" pos="24 10 0.05" rgba="1 0 0 1"/>
        <geom name="obstacle 3" type="box" size="0.05 4 0.05" pos="15 16 0.05" rgba="1 0 0 1"/>
        <geom name="obstacle 4" type="box" size="1.5 0.05 0.05" pos="13.5 12 0.05" rgba="1 0 0 1"/>
        <geom name="obstacle 5" type="box" size="1.5 0.05 0.05" pos="19.5 12 0.05" rgba="1 0 0 1"/>
        <geom name="obstacle 6" type="box" size="0.05 2.5 0.05" pos="15 7.5 0.05" rgba="1 0 0 1"/>
        <body pos="13.545 2.52 0.05" euler="0 0 120">
            <geom name="obstacle 7" type="box" size="0.05 2.92 0.05" rgba="1 0 0 1"/>
        </body>


        <!-- for example, here's a box -->
